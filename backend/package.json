{
  "name": "task-management-backend",
  "version": "1.0.0",
  "description": "Task Management System - Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "node fix-migrations.js && npx prisma migrate deploy && npx prisma generate && node dist/server.js",
